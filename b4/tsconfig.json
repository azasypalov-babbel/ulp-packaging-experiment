{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@spec/*": ["spec/*"],
      "@src/*": ["src/*"],
      "@stories/*": ["stories/*"],
      "@vendor/*": ["vendor/*"],
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src/**/*", "spec/**/*", "@types/**/*"]
}